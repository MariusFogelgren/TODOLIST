<Page x:Class="WpfApp.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Page1" Background="White" Height="350" Width="525"
      Loaded="Page1_Loaded"
      KeepAlive="False">
    <!-- Attach the Loaded event handler -->
    <Grid>
        <TextBlock Text="Add task" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" FontFamily="Arial Black" Margin="177,10,0,0"/>

        <TextBox x:Name="MyTaskTextBox" HorizontalAlignment="Left" Margin="190,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" BorderBrush="Black"/>

        <TextBlock Text="Enter your task" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" FontFamily="Arial Black" Margin="194,152,0,0"/>
    </Grid>
</Page>
