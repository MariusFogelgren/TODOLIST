<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="722*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add a Task" HorizontalAlignment="Left" Margin="255,107,0,0" VerticalAlignment="Top" Click="Button_Click" Height="30" Width="134" Grid.Column="2" FontFamily="Segoe UI Black" Background="#FF9E9E9E"/>
        <Button Content="Print All task" HorizontalAlignment="Left" Height="29" Margin="255,144,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_1" Grid.Column="2" FontFamily="Segoe UI Black" Background="#FF9E9E9E"/>
        <Button Content="Delete a Task" HorizontalAlignment="Left" Height="29" Margin="255,181,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_2" Grid.Column="2" FontFamily="Segoe UI Black" Background="#FF9E9E9E"/>
        <Button Content="Mark task as done" HorizontalAlignment="Left" Height="30" Margin="255,217,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_3" Grid.Column="2" FontFamily="Segoe UI Black" Background="#FF9E9E9E"/>
        <Label Content="Welcome to TODO list" HorizontalAlignment="Left" Margin="252,57,0,0" VerticalAlignment="Top" Width="140" Grid.Column="2" FontFamily="Segoe UI Black" Background="#FF9E9E9E"/>
    </Grid>
</Window>
