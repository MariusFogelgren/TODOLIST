<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="19,44,0,0" TextWrapping="Wrap" Text="TODO List" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="10"/>
        <Button Content="Add Task" HorizontalAlignment="Left" Margin="19,76,0,0" VerticalAlignment="Top" Height="19" Width="94" Click="addTask_Click"/>
        <Button Content="Print All task" HorizontalAlignment="Left" Margin="19,100,0,0" VerticalAlignment="Top" Height="19" Width="94" Click="printTask"/>
        <Button Content="Delete Task" HorizontalAlignment="Left" Margin="19,124,0,0" VerticalAlignment="Top" Height="19" Width="94" Click="deleteTask"/>
        <Button Content="Mark Task Done" HorizontalAlignment="Left" Margin="19,148,0,0" VerticalAlignment="Top" Height="19" Width="94" Click="markTask"/>
        <TextBlock HorizontalAlignment="Left" Margin="19,60,0,0" TextWrapping="Wrap" Text="Choice your option" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="10"/>
        <TextBox x:Name="textBoxTask" HorizontalAlignment="Left" Margin="186,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
